{
	"name": "Temporary Tab",
	"version": "0.2",
	"permissions": [
		"tabs",
		"storage"
	],
	"background": {
		"scripts": [
			"lib/tab-registry/TabRegistry.js",
			"background.js"
		],
		"persistent": true
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["lib/tab-registry/ContentScript.js"]
		},
		{
			"matches": ["<all_urls>"],
			"js": ["destruct.js"]
		}
	],
	"browser_action": {
		"default_icon": {
			"19": "images/bomb_19.png",
			"38": "images/bomb.png"
		},
		"default_title": "This page will self destruct",
		"default_popup": "popup.html"
	},
	"chrome_url_overrides" : {
		"newtab": "blank.html"
	},
	"manifest_version": 2
}
