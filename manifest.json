{
	"name": "Temporary Tab",
	"version": "0.2",
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage",
		"webNavigation",
		"history"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["destruct.js"]
		}
	],
	"page_action": {
		"default_icon": {
			"19": "images/bomb_19.png",
			"38": "images/bomb.png"
		},
		"default_title": "Defuse self destruct"
	},
	"chrome_url_overrides" : {
		"newtab": "blank.html"
	},
	"manifest_version": 2
}
